// Copy this file to .vscode/settings.json
{
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": true
		},
		"editor.insertSpaces": false,
		"editor.quickSuggestions": {
			"strings": true
		},
		"search.exclude": {
			"**/node_modules": true,
			"**/bower_components": true,
			"**/*.code-search": true,
			"**/package-lock.json": true,
			"**/build": true
		}
}
