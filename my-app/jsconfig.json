{
	"compilerOptions": {
		"module": "es6",
		"target": "es6",
		"checkJs": true,
		"jsx":"react-jsx",
		"moduleResolution": "node",
		"allowJs": true
	},
	"exclude": ["node_modules", "**/node_modules/*"],
	"include": ["src/**/*"],
	"typeAcquisition": {
		"include": ["react", "./src/types/*.d.ts"]
	}
}
